# Production Environment Variables for Synology
# Copy this to .env on your Synology and fill in your actual values

# Database
DATABASE_URL="file:/app/data/wanwatch.db"

# NextAuth - CHANGE THIS!
NEXTAUTH_SECRET="CHANGE-ME-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://YOUR-SYNOLOGY-IP:3000"

# Email Configuration (Optional)
SMTP_HOST="your-smtp-host"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="WAN Monitor <your-email@example.com>"
EMAIL_TO="your-email@example.com"

# App Configuration
APP_URL="http://YOUR-SYNOLOGY-IP:3000"
CHECK_INTERVAL_SECONDS="30"
