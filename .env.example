# Docker Configuration (for Synology/Portainer deployments)
TZ="America/New_York"
PUID="1026"
PGID="100"

# Database
DATABASE_URL="file:./wanwatch.db"

# NextAuth - Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
# IMPORTANT: Set NEXTAUTH_URL to your PUBLIC domain if using reverse proxy!
# Examples:
#   - Direct access: "http://192.168.68.68:3000"
#   - Reverse proxy: "https://wanwatch.example.com"
NEXTAUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"

# Initial Admin User (created automatically on first startup if it doesn't exist)
INITIAL_ADMIN_EMAIL="admin@example.com"
INITIAL_ADMIN_PASSWORD="changeme"
INITIAL_ADMIN_NAME="Admin"

# Email Configuration (Optional - required for email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="WAN Monitor <your-email@gmail.com>"
EMAIL_TO="your-email@gmail.com"

# App Configuration
APP_URL="http://localhost:3000"
# Normal monitoring interval (seconds) - Default: 300 (5 minutes)
CHECK_INTERVAL_SECONDS="300"
# Outage monitoring interval (seconds) - Default: 30 (30 seconds)
# When an outage is detected, monitoring switches to this faster interval
# for more accurate outage duration tracking
OUTAGE_CHECK_INTERVAL_SECONDS="30"

# Development - set to true to enable monitoring in development mode
ENABLE_MONITORING="false"

# Speed Test Configuration (Optional - requires Ookla license acceptance)
# WARNING: Ookla Speedtest is free for personal, non-commercial use only
# Set to "true" to enable automatic speed testing
ENABLE_SPEED_TEST="false"
# How often to run speed tests (in seconds) - Default: 1800 (30 minutes)
# Recommended minimum: 1800 seconds to avoid excessive testing
SPEED_TEST_INTERVAL_SECONDS="1800"
